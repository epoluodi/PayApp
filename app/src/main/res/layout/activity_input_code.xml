<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="onlyedu.com.payapp.InputCodeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blackTransparentB"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="输入合同号"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:gravity="center"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="120dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_edittext"
            android:maxLength="20"
            android:paddingLeft="60dp"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_marginLeft="10dp"
            android:text="合同号:" />


    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_weight="1"
            android:id="@+id/btn2"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="取消"

            android:background="@drawable/btn2_main_selector"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="80dp"
            android:layout_height="50dp"


            />
        <Button
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_height="50dp"


            android:background="@drawable/btn1_main_selector"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/btn1"
            />
    </LinearLayout>


</RelativeLayout>
